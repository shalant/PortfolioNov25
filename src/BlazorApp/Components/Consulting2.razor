@page "/consulting2"

@using MudBlazor

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Primary">
        <MudText Typo="Typo.h6">Your Friendly Neighborhood Tech Team</MudText>
        <MudSpacer />
        <MudLink Href="#services" Class="mx-3">Services</MudLink>
        <MudLink Href="#about" Class="mx-3">About</MudLink>
        <MudLink Href="#contact" Class="mx-3">Contact</MudLink>
    </MudAppBar>

    <MudMainContent Class="hero-modern">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            <MudGrid Class="pt-12 pb-8" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.h2" Class="mb-3 fw-700">
                        Technology Made Simple for Small Business
                    </MudText>
                    <MudText Typo="Typo.subtitle1" Class="mb-6 text-muted">
                        We take the stress out of IT so you can focus on running and growing your business.
                        Affordable, reliable solutionsâ€”tailored to fit your needs.
                    </MudText>
                    <MudStack Direction="Row" Spacing="2">
                        <MudButton Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large">
                            Get Your Free Consultation
                        </MudButton>
                        <MudButton Color="Color.Primary" Variant="Variant.Outlined" Size="Size.Large">
                            Talk to an Expert
                        </MudButton>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="6" Class="illustration-wrap">
                    <div class="desk-setup">
                        <div class="doug-avatar">
                            <div class="head"></div>
                            <div class="glasses"></div>
                            <div class="beard"></div>
                            <div class="torso"></div>
                            <div class="watch"></div>
                        </div>

                        <div class="monitor monitor-left">
                            <div class="code-line"></div>
                            <div class="code-line"></div>
                            <div class="code-line"></div>
                        </div>
                        <div class="monitor monitor-center">
                            <div class="code-line"></div>
                            <div class="code-line"></div>
                            <div class="code-line"></div>
                        </div>
                        <div class="monitor monitor-right">
                            <div class="code-line"></div>
                            <div class="code-line"></div>
                            <div class="code-line"></div>
                        </div>

                        <div class="floating-icon cloud"></div>
                        <div class="floating-icon lock"></div>
                        <div class="floating-icon gear"></div>

                        <div class="mug">
                            <span>I TURN COFFEE INTO CODE</span>
                        </div>
                    </div>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>

<style>
    :root {
        --hero-bg: linear-gradient(135deg, #0E2A47 0%, #123B6B 60%, #0E2A47 100%);
        --primary: #1565C0;
        --accent: #FFD447;
        --ink: #0A1C2E;
        --muted: #94A3B8;
    }

    .hero-modern {
        background: var(--hero-bg);
        color: white;
        min-height: 72vh;
    }

    .fw-700 {
        font-weight: 700;
    }

    .text-muted {
        color: #D0D8E6;
    }

    /* Illustration container */
    .illustration-wrap {
        position: relative;
    }

    .desk-setup {
        position: relative;
        height: 360px;
        border-radius: 16px;
        background: rgba(255,255,255,0.06);
        backdrop-filter: blur(6px);
        overflow: hidden;
        padding: 18px;
    }

    /* Doug avatar (simple shapes for a clean modern look) */
    .doug-avatar {
        position: absolute;
        left: 20px;
        bottom: 28px;
        width: 160px;
        height: 220px;
    }

        .doug-avatar .head {
            width: 84px;
            height: 84px;
            border-radius: 50%;
            background: #EAC7A7;
            position: absolute;
            left: 30px;
            top: 0;
            box-shadow: 0 6px 20px rgba(0,0,0,0.25);
        }

        .doug-avatar .glasses {
            position: absolute;
            left: 38px;
            top: 26px;
            width: 68px;
            height: 26px;
            border: 3px solid #1B2A41;
            border-radius: 22px;
            box-shadow: inset 0 0 0 2px rgba(255,255,255,0.25);
        }

        .doug-avatar .beard {
            position: absolute;
            left: 38px;
            top: 54px;
            width: 70px;
            height: 32px;
            background: #9B5C3B;
            border-bottom-left-radius: 16px;
            border-bottom-right-radius: 16px;
        }

        .doug-avatar .torso {
            position: absolute;
            left: 10px;
            top: 90px;
            width: 140px;
            height: 120px;
            background: #0F3A66;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.25);
        }

        .doug-avatar .watch {
            position: absolute;
            left: 6px;
            top: 120px;
            width: 22px;
            height: 22px;
            background: #1B2A41;
            border-radius: 50%;
            box-shadow: 0 0 0 3px #0F3A66 inset;
        }

    /* Monitors */
    .monitor {
        position: absolute;
        bottom: 24px;
        width: 160px;
        height: 110px;
        background: #0A1C2E;
        border-radius: 10px;
        box-shadow: 0 10px 24px rgba(0,0,0,0.35);
        overflow: hidden;
    }

    .monitor-left {
        left: 190px;
        transform: rotate(-1.8deg);
    }

    .monitor-center {
        left: 360px;
        transform: rotate(0.5deg);
    }

    .monitor-right {
        left: 530px;
        transform: rotate(2deg);
    }

    .code-line {
        width: 70%;
        height: 8px;
        margin: 10px 15px;
        background: linear-gradient(90deg, #2F6FB1, #42A5F5);
        border-radius: 6px;
        animation: codePulse 2.2s ease-in-out infinite;
    }

        .code-line:nth-child(2) {
            width: 55%;
            animation-delay: 0.4s;
        }

        .code-line:nth-child(3) {
            width: 40%;
            animation-delay: 0.8s;
        }

    /* Floating icons */
    .floating-icon {
        position: absolute;
        width: 42px;
        height: 42px;
        border-radius: 10px;
        background: rgba(255,255,255,0.12);
        border: 1px solid rgba(255,255,255,0.2);
        box-shadow: 0 6px 18px rgba(0,0,0,0.25);
        backdrop-filter: blur(3px);
        animation: float 6s ease-in-out infinite;
    }

    .cloud {
        right: 34px;
        top: 24px;
        animation-delay: 0.2s;
    }

    .lock {
        right: 88px;
        top: 110px;
        animation-delay: 0.6s;
    }

    .gear {
        right: 24px;
        top: 200px;
        animation-delay: 1s;
    }

    /* Mug with subtle steam animation */
    .mug {
        position: absolute;
        left: 340px;
        bottom: 20px;
        width: 120px;
        height: 70px;
        border-radius: 10px;
        background: #1E88E5;
        color: #fff;
        font-size: 11px;
        letter-spacing: 0.6px;
        display: grid;
        place-items: center;
        text-align: center;
        padding: 6px;
        box-shadow: 0 12px 26px rgba(0,0,0,0.35);
    }

        .mug::before, .mug::after {
            content: "";
            position: absolute;
            top: -10px;
            left: 20px;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: rgba(255,255,255,0.35);
            filter: blur(2px);
            animation: steam 3s ease-in-out infinite;
        }

        .mug::after {
            left: 50px;
            animation-delay: 0.8s;
        }

</style>
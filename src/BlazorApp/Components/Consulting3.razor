@page "/consulting3"

@using MudBlazor

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Transparent" Class="cozy-appbar">
        <MudText Typo="Typo.h6" Class="ink">Your Friendly Neighborhood Tech Team</MudText>
        <MudSpacer />
        <MudLink Href="#services" Class="mx-3 ink">Services</MudLink>
        <MudLink Href="#about" Class="mx-3 ink">About</MudLink>
        <MudLink Href="#contact" Class="mx-3 ink">Contact</MudLink>
    </MudAppBar>

    <MudMainContent Class="hero-cozy">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Class="pt-10 pb-8" AlignItems="AlignItems.Center">
                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.h2" Class="mb-3 fw-700 ink">
                        Simplify Your Technology
                    </MudText>
                    <MudText Typo="Typo.subtitle1" Class="mb-6 dim">
                        Affordable IT consulting designed for small businesses. Clear solutions,
                        no jargon, just results.
                    </MudText>
                    <MudStack Direction="Row" Spacing="2">
                        <MudButton Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large">
                            Get Started Today
                        </MudButton>
                        <MudButton Color="Color.Secondary" Variant="Variant.Text" Size="Size.Large">
                            See Our Work
                        </MudButton>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="6">
                    <div class="cozy-illustration">
                        <div class="plants plant-left"></div>
                        <div class="desk"></div>

                        <div class="doug-avatar">
                            <div class="head"></div>
                            <div class="glasses"></div>
                            <div class="beard"></div>
                            <div class="torso"></div>
                            <div class="arm-left"></div>
                            <div class="arm-right"></div>
                        </div>

                        <div class="laptop">
                            <div class="screen">
                                <div class="line"></div>
                                <div class="line"></div>
                                <div class="line"></div>
                            </div>
                        </div>

                        <div class="mug steam">
                            <span>I TURN COFFEE INTO CODE</span>
                        </div>

                        <div class="ambient-glow"></div>
                    </div>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>

<style>
    :root {
        --paper: #FFFFFF;
        --ink: #1F2937;
        --dim: #6B7280;
        --leaf: #2ECC71;
        --accent: #FF6F61;
        --blue: #1976D2;
    }

    .ink {
        color: var(--ink);
    }

    .dim {
        color: var(--dim);
    }

    .fw-700 {
        font-weight: 700;
    }

    .cozy-appbar {
        background: transparent;
    }

    .hero-cozy {
        min-height: 72vh;
        background: radial-gradient(1200px 600px at 75% 20%, rgba(25,118,210,0.12), transparent 60%), linear-gradient(180deg, #FAFAFA 0%, #F3F4F6 100%);
    }

    .cozy-illustration {
        position: relative;
        height: 380px;
        border-radius: 20px;
        background: var(--paper);
        box-shadow: 0 20px 60px rgba(31,41,55,0.10);
        overflow: hidden;
    }

    .desk {
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        height: 110px;
        background: #E8EDF3;
    }

    .plants {
        position: absolute;
        bottom: 110px;
        width: 120px;
        height: 180px;
        border-radius: 16px;
        background: linear-gradient(180deg, #34D399, #10B981);
        filter: blur(1px);
        animation: sway 5s ease-in-out infinite;
    }

    .plant-left {
        left: 12px;
        animation-delay: 0.6s;
    }

    

    /* Doug avatar */
    .doug-avatar {
        position: absolute;
        left: 80px;
        bottom: 120px;
        width: 160px;
        height: 220px;
    }

        .doug-avatar .head {
            width: 84px;
            height: 84px;
            border-radius: 50%;
            background: #EAC7A7;
            position: absolute;
            left: 34px;
            top: 0;
        }

        .doug-avatar .glasses {
            position: absolute;
            left: 42px;
            top: 28px;
            width: 64px;
            height: 24px;
            border: 3px solid #2C3E50;
            border-radius: 20px;
        }

        .doug-avatar .beard {
            position: absolute;
            left: 42px;
            top: 56px;
            width: 66px;
            height: 30px;
            background: #8C5A3A;
            border-radius: 0 0 14px 14px;
        }

        .doug-avatar .torso {
            position: absolute;
            left: 14px;
            top: 92px;
            width: 132px;
            height: 116px;
            background: #243B53;
            border-radius: 16px;
        }

        .doug-avatar .arm-left, .doug-avatar .arm-right {
            position: absolute;
            top: 126px;
            width: 60px;
            height: 26px;
            background: #243B53;
            border-radius: 16px;
        }

        .doug-avatar .arm-left {
            left: 0;
            transform: rotate(-12deg);
        }

        .doug-avatar .arm-right {
            right: 0;
            transform: rotate(12deg);
        }

    /* Laptop */
    .laptop {
        position: absolute;
        left: 250px;
        bottom: 70px;
        width: 200px;
        height: 120px;
        border-radius: 12px;
        background: #0A1C2E;
    }

        .laptop .screen {
            position: absolute;
            left: 12px;
            top: 12px;
            right: 12px;
            bottom: 40px;
            border-radius: 8px;
            background: #102A43;
        }

        .laptop .line {
            height: 8px;
            margin: 10px;
            border-radius: 6px;
            background: linear-gradient(90deg, #1976D2, #42A5F5);
            animation: codeFlow 2.4s ease-in-out infinite;
        }

            .laptop .line:nth-child(2) {
                width: 70%;
                animation-delay: 0.4s;
            }

            .laptop .line:nth-child(3) {
                width: 50%;
                animation-delay: 0.8s;
            }


    /* Mug with steam */
    .mug {
        position: absolute;
        left: 480px;
        bottom: 68px;
        width: 140px;
        height: 76px;
        border-radius: 12px;
        background: var(--blue);
        color: #fff;
        display: grid;
        place-items: center;
        text-align: center;
        font-size: 11px;
        letter-spacing: 0.6px;
        box-shadow: 0 16px 40px rgba(0,0,0,0.2);
    }

    .steam::before, .steam::after {
        content: "";
        position: absolute;
        top: -14px;
        left: 24px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: rgba(25,118,210,0.35);
        filter: blur(2px);
        animation: steamUp 3.4s ease-in-out infinite;
    }

    .steam::after {
        left: 54px;
        animation-delay: 0.9s;
    }


    /* Ambient glow animation */
    .ambient-glow {
        position: absolute;
        right: -40px;
        top: -40px;
        width: 220px;
        height: 220px;
        border-radius: 50%;
        background: radial-gradient(closest-side, rgba(255,111,97,0.22), transparent 70%);
        animation: glowPulse 6s ease-in-out infinite;
    }

</style>
@using MudBlazor

<MudPaper Class="artdeco-scene" Elevation="3">
    <MudGrid>
        <MudItem xs="12">
            <div class="artdeco-header">FUTURISTIC TECH GURU</div>
        </MudItem>

        <MudItem xs="6">
            <div class="artdeco-monitor">
                <div class="artdeco-code">
                    <span>const neon = glow();</span><br />
                    <span>function boot() { connect(); }</span><br />
                    <span>log("I TURN COFFEE INTO CODE");</span>
                </div>
            </div>
        </MudItem>

        <MudItem xs="6">
            <div class="artdeco-monitor">
                <div class="artdeco-code">
                    <span>import { Spark } from './aurora';</span><br />
                    <span>skyline.shimmer();</span><br />
                    <span>HUD.enable("scan");</span>
                </div>
            </div>
        </MudItem>

        <MudItem xs="12" Class="artdeco-character">
            <div class="artdeco-head"></div>
            <div class="artdeco-body"></div>
            <div class="artdeco-mug">I TURN COFFEE INTO CODE</div>
        </MudItem>
    </MudGrid>
</MudPaper>

<style>
    .artdeco-scene {
        background: #0f0f1f;
        color: #eaeaea;
        padding: 2rem;
        text-align: center;
        font-family: "Futura", "Century Gothic", sans-serif;
    }

    .artdeco-header {
        font-size: 1.6rem;
        font-weight: bold;
        letter-spacing: 0.2em;
        border-top: 3px solid #c0a060;
        border-bottom: 3px solid #c0a060;
        margin-bottom: 1rem;
        color: #c0a060;
    }

    .artdeco-monitor {
        background: #1a1a2f;
        border: 4px solid #c0a060;
        border-radius: 0;
        padding: 1rem;
        margin: 0.5rem;
    }

    .artdeco-code {
        font-family: "Courier New", monospace;
        font-size: 0.9rem;
        color: #eaeaea;
        text-align: left;
    }

    .artdeco-character {
        margin-top: 2rem;
    }

    .artdeco-head {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        background: #d9c2a3;
        border: 4px solid #c0a060;
        border-radius: 50%;
    }

    .artdeco-body {
        width: 120px;
        height: 160px;
        margin: 1rem auto;
        background: #0c2b5f;
        border: 4px solid #c0a060;
    }

    .artdeco-mug {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.5rem 1rem;
        background: #2b7bff;
        color: #fff;
        font-weight: bold;
        border: 3px solid #c0a060;
        text-transform: uppercase;
    }
</style>